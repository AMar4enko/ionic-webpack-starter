ion-side-menus
  ion-side-menu-content
    ion-nav-bar.bar.bar-royal(align-title='center')
      ion-nav-back-button
      ion-nav-buttons(side='left')
        button.button.button-icon.button-clear.ion-navicon(menu-toggle='left')

    ion-nav-title App
    ion-pane
      ion-fake-tabs(background='royal', color='light')
        ion-fake-tab(sref='app.tabs.googleImages', icon='ion-android-image', root='true')
        ion-fake-tab(sref='app.tabs.test1', icon='ion-android-happy', root='true')
        ion-fake-tab(sref='app.tabs.test2', icon='ion-android-bulb', root='true')
        ion-nav-view(animation='slide-left-right')

  ion-side-menu.dark-bg.dark-border(side='left', expose-aside-when='large')
    ion-header-bar.bar-dark
      h1.title Side menu
    ion-content.has-header
      ion-list
        ion-item Menu item
